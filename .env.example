# Discord Bot Configuration
# Copy this file to .env and fill in your values

# Discord Bot Token (from https://discord.com/developers/applications)
DISCORD_TOKEN=your_bot_token_here

# Discord Application/Client ID (from Discord Developer Portal)
DISCORD_CLIENT_ID=your_client_id_here

# Comma-separated list of Discord User IDs allowed to use the bot
# Find your ID: Enable Developer Mode in Discord, right-click your name, Copy ID
ALLOWED_USER_IDS=123456789012345678


# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen-tools
OLLAMA_TIMEOUT=120000


# Metrics Configuration
# Enable Prometheus metrics endpoint
METRICS_ENABLED=true
# Port for metrics HTTP server
METRICS_PORT=9090


# qBittorrent Configuration
# WebUI URL for qBittorrent instance
QBIT_HOST=http://192.168.50.21:8080
# Enable/disable qBittorrent tool
QBIT_ENABLED=true


# Logging Configuration
# Log levels: debug, info, warn, error, silent
# Development default: debug (shows all logs)
# Production recommended: info (hides debug messages)
LOG_LEVEL=debug
